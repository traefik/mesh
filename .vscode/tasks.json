{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make Validate",
            "type": "shell",
            "command": "make check",
            "group": "test",
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Make Build",
            "type": "shell",
            "command": "make build",
            "group": "build",
            "problemMatcher": [
                "$go"
            ]
        },
    ]
}
